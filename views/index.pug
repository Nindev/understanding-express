doctype html 
html
  head
    title=title
    link(rel='stylesheet', href='/static/css/style.css')
    meta(name='viewport' content='windth=device-width, initial-scale=1')
  body
    .wrap
      .profile.hide(style='background-image: url(' + bgImage + ');')
      .information
        .information__heading
          span.information__heading__tag= ship
        h1.information__name
          | #{title}
        h2.information__name
          small=subtitle
        .content-block
          p.information__description= content
        .breadcrumb
          ul 
            li 
              a(href="/") HOME
              a(href="/ships") SHIPS
  script(src='js/script.js')